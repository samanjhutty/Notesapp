<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/listLayout"
    android:layout_marginHorizontal="@dimen/margin_mini"
    android:layout_marginVertical="@dimen/margin_mini"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/noteShowLayout"
            android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_alignParentTop="true"
            android:visibility="gone"
            app:riv_corner_radius_top_left="16dp"
            app:riv_corner_radius_top_right="16dp"
            android:id="@+id/viewForImageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        android:padding="@dimen/margin_small"
        android:background="@android:color/transparent"
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem" /></RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/cardview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_mini"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_mini"
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a9a9a9"
        android:textSize="@dimen/text_size_small" />
</androidx.constraintlayout.widget.ConstraintLayout>